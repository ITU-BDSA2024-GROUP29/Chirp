@page "/cheeps/page/{pageNumber:int?}" // Define the route for pagination
@model Chirp.Razor.Pages.CheepsModel
@{
    ViewData["Title"] = "All Cheeps";
    Layout = "Shared/_Layout";
}

<div>
    <h2>All Cheeps</h2>

    @if (Model.Cheeps != null && Model.Cheeps.Any())
    {

        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author">@cheep.Author</a>
                        </strong>
                        <!-- Follow/Unfollow button -->
                        <form asp-controller="Follow" asp-action="@(cheep.IsFollowedByCurrentUser ? "Unfollow" : "Follow")" method="post" style="display:inline;">
                        <input type="hidden" name="followedId" value="@cheep.Author" />
                        <button type="submit" class="btn btn-@(cheep.IsFollowedByCurrentUser ? "danger" : "primary") btn-sm">
                            @(cheep.IsFollowedByCurrentUser ? "Unfollow" : "Follow")
                        </button>
                        </form>
                        @cheep.Message
                        <small>&mdash; @cheep.Timestamp</small>
                    </p>
                </li>
            }
        </ul>

        <!-- Pagination controls -->
        <div class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <a href="/cheeps/page/@(Model.CurrentPage - 1)">Previous</a>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <a href="/cheeps/page/@i">@i</a>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <a href="/cheeps/page/@(Model.CurrentPage + 1)">Next</a>
            }
        </div>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>
