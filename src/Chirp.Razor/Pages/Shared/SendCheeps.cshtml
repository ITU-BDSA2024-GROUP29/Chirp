

<div class="cheepbox">
    <h3>What's on your mind @(User.Identity.Name)?</h3>
    <form  method="post">
        @Html.AntiForgeryToken()
        <input style="float: left" type="text" asp-page-handler="CreateCheep" name="Post" placeholder="Type your message..." />
        <button type="submit">Share</button>
    </form>
</div>





    